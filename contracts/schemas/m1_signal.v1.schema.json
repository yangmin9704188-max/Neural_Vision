{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/schemas/m1_signal.v1.schema.json",
  "title": "m1_signal.v1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "module",
    "m_level",
    "run_id",
    "run_dir_rel"
  ],
  "properties": {
    "schema_version": {
      "const": "m1_signal.v1"
    },
    "module": {
      "enum": [
        "body",
        "garment",
        "fitting"
      ]
    },
    "m_level": {
      "const": "M1"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "run_dir_rel": {
      "type": "string",
      "pattern": "^data/[^:\\\\]*$"
    },
    "created_at_utc": {
      "type": "string"
    },
    "inputs_fingerprint": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    }
  }
}
