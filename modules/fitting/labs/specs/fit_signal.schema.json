{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "specs/fit_signal.schema.json",
  "title": "Fit Signal Schema v0",
  "description": "Solver output (fit_signal.json). Facts-only. No quality thresholds.",
  "type": "object",
  "required": [
    "schema_version",
    "created_at",
    "input_refs",
    "solver",
    "timing",
    "quality_scores",
    "flags"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "fit_signal.v0",
      "description": "Schema version (fixed v0)."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp (ISO 8601)."
    },
    "input_refs": {
      "type": "object",
      "required": ["body_subset_path", "garment_ref"],
      "additionalProperties": false,
      "properties": {
        "body_subset_path": {
          "type": "string",
          "minLength": 1,
          "description": "Path to body subset (e.g. body_measurements_subset.json). Relative preferred."
        },
        "garment_ref": {
          "type": "string",
          "minLength": 1,
          "description": "Garment manifest path or geometry manifest path. Relative preferred."
        },
        "resolved_paths": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "body_subset_path_resolved": { "type": "string" },
            "garment_ref_resolved": { "type": "string" }
          },
          "description": "Optional resolved absolute paths."
        }
      }
    },
    "solver": {
      "type": "object",
      "required": ["solver_id", "solver_version"],
      "additionalProperties": false,
      "properties": {
        "solver_id": {
          "type": "string",
          "minLength": 1,
          "description": "Solver identifier (e.g. tier1_constraint_solver_stub)."
        },
        "solver_version": {
          "type": "string",
          "minLength": 1,
          "description": "Solver version (e.g. 0.0)."
        },
        "notes": {
          "type": "string",
          "description": "Optional solver notes (e.g. proxy params alpha/beta)."
        }
      }
    },
    "timing": {
      "type": "object",
      "required": ["wall_ms"],
      "additionalProperties": false,
      "properties": {
        "wall_ms": {
          "type": "integer",
          "minimum": 1,
          "description": "Wall-clock time in milliseconds."
        },
        "cpu_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "CPU time in milliseconds (optional)."
        },
        "notes": {
          "type": "string",
          "description": "Optional timing notes."
        }
      }
    },
    "quality_scores": {
      "type": "object",
      "required": ["clipping_score", "penetration_score", "constraint_violation_score"],
      "additionalProperties": false,
      "properties": {
        "clipping_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Clipping score (0=worst, 1=best). Facts-only."
        },
        "penetration_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Penetration score (0=worst, 1=best). Facts-only."
        },
        "constraint_violation_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Constraint violation score (0=worst, 1=best). Facts-only."
        }
      }
    },
    "flags": {
      "type": "object",
      "required": ["early_exit", "degraded"],
      "additionalProperties": false,
      "properties": {
        "early_exit": {
          "type": "boolean",
          "description": "True if solver exited early (e.g. hard gate)."
        },
        "degraded": {
          "type": "boolean",
          "description": "True if output is degraded (partial convergence etc)."
        }
      }
    },
    "camera": {
      "type": "object",
      "required": ["camera_preset_id", "params"],
      "additionalProperties": false,
      "properties": {
        "camera_preset_id": {
          "type": "string",
          "const": "fixed_camera_preset_v1",
          "description": "Fixed camera preset identifier."
        },
        "params": {
          "type": "object",
          "required": [
            "fov_deg",
            "camera_distance_m",
            "yaw_deg",
            "pitch_deg",
            "roll_deg",
            "near_m",
            "far_m",
            "image_resolution_w",
            "image_resolution_h"
          ],
          "additionalProperties": false,
          "properties": {
            "fov_deg": { "type": "number" },
            "camera_distance_m": { "type": "number", "minimum": 0 },
            "yaw_deg": { "type": "number" },
            "pitch_deg": { "type": "number" },
            "roll_deg": { "type": "number" },
            "near_m": { "type": "number", "minimum": 0 },
            "far_m": { "type": "number", "minimum": 0 },
            "image_resolution_w": { "type": "integer", "minimum": 1 },
            "image_resolution_h": { "type": "integer", "minimum": 1 }
          }
        }
      }
    },
    "regen_telemetry": {
      "type": "object",
      "required": [
        "policy_version",
        "max_retry",
        "iter_max_per_attempt",
        "attempt_count",
        "retries_used",
        "regen_triggered",
        "termination_reason"
      ],
      "additionalProperties": false,
      "properties": {
        "policy_version": { "type": "string", "minLength": 1 },
        "max_retry": { "type": "integer", "minimum": 0 },
        "iter_max_per_attempt": { "type": "integer", "minimum": 1 },
        "attempt_count": { "type": "integer", "minimum": 0 },
        "retries_used": { "type": "integer", "minimum": 0 },
        "retry_budget_remaining": { "type": "integer", "minimum": 0 },
        "regen_triggered": { "type": "boolean" },
        "termination_reason": { "type": "string", "minLength": 1 },
        "early_exit_reason": { "type": ["string", "null"] },
        "attempts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "attempt_index",
              "trigger",
              "constraint_strength_scale",
              "memory_cleared",
              "iter_limit",
              "iter_used",
              "wall_ms",
              "outcome"
            ],
            "properties": {
              "attempt_index": { "type": "integer", "minimum": 1 },
              "trigger": { "type": "string", "minLength": 1 },
              "constraint_strength_scale": { "type": "number", "minimum": 0 },
              "memory_cleared": { "type": "boolean" },
              "iter_limit": { "type": "integer", "minimum": 1 },
              "iter_used": { "type": "integer", "minimum": 0 },
              "wall_ms": { "type": "integer", "minimum": 0 },
              "outcome": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },
    "version_keys": {
      "type": "object",
      "required": [
        "snapshot_version",
        "semantic_version",
        "geometry_impl_version",
        "dataset_version"
      ],
      "additionalProperties": false,
      "properties": {
        "snapshot_version": { "type": "string", "minLength": 1 },
        "semantic_version": { "type": "string", "minLength": 1 },
        "geometry_impl_version": { "type": "string", "minLength": 1 },
        "dataset_version": { "type": "string", "minLength": 1 }
      }
    },
    "explainability": {
      "type": "object",
      "required": ["weights", "score_components", "score_total", "decision_trace"],
      "additionalProperties": false,
      "properties": {
        "weights": {
          "type": "object",
          "required": ["score_clipping", "score_fit_signal", "score_smoothness"],
          "additionalProperties": false,
          "properties": {
            "score_clipping": { "type": "number", "minimum": 0, "maximum": 1 },
            "score_fit_signal": { "type": "number", "minimum": 0, "maximum": 1 },
            "score_smoothness": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "score_components": {
          "type": "object",
          "required": ["score_clipping", "score_fit_signal", "score_smoothness"],
          "additionalProperties": false,
          "properties": {
            "score_clipping": { "type": "number", "minimum": 0, "maximum": 1 },
            "score_fit_signal": { "type": "number", "minimum": 0, "maximum": 1 },
            "score_smoothness": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "score_total": { "type": "number", "minimum": 0, "maximum": 1 },
        "decision_trace": {
          "type": "object",
          "required": [
            "garment_input_path_used",
            "degraded_state",
            "early_exit_reason",
            "warning_codes"
          ],
          "additionalProperties": false,
          "properties": {
            "garment_input_path_used": { "type": "string", "enum": ["npz", "glb_fallback"] },
            "degraded_state": { "type": "string", "enum": ["none", "high_warning_degraded"] },
            "early_exit_reason": { "type": ["string", "null"] },
            "warning_codes": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "budget": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "wall_ms_soft_limit": { "type": "integer", "minimum": 0 },
        "wall_ms_soft_exceeded": { "type": "boolean" }
      },
      "description": "Optional budget tracking. Soft limit exceeded = warning only."
    },
    "warnings": {
      "type": "array",
      "description": "Optional warnings from solver.",
      "items": {
        "type": "object",
        "required": ["code", "severity", "message"],
        "additionalProperties": false,
        "properties": {
          "code": { "type": "string" },
          "severity": { "type": "string", "enum": ["info", "warning", "error"] },
          "message": { "type": "string" }
        }
      }
    }
  }
}
